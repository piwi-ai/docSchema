{
  "id": "doc-identity-card",
  "name": "Identity Document",
  "description": "Identity document (ID Card, Passport, Driver License)",
  "references": [
    {
      "title": "Belgium.be — Identity card",
      "url": "https://www.belgium.be/en/family/identity_card_and_passport",
      "type": "documentation"
    }
  ],
  "jsonSchema": {
    "type": "object",
    "properties": {
      "firstName": {
        "type": "string",
        "description": "First name / Prénom / Voornaam"
      },
      "lastName": {
        "type": "string",
        "description": "Last name / Nom / Achternaam"
      },
      "personalId": {
        "type": "string",
        "description": "Personal ID number / Numéro de registre national",
        "pattern": "^\\d{2}\\.\\d{2}\\.\\d{2}-\\d{3}\\.\\d{2}$"
      },
      "documentType": {
        "type": "string",
        "description": "Document type / Type de document"
      },
      "documentNumber": {
        "type": "string",
        "description": "Document number / Numéro du document"
      },
      "issueDate": {
        "type": "string",
        "description": "Issue date / Date de délivrance",
        "pattern": "^\\d{2}\\.\\d{2}\\.\\d{4}$"
      },
      "expirationDate": {
        "type": "string",
        "description": "Expiration date / Date d'expiration",
        "pattern": "^\\d{2}\\.\\d{2}\\.\\d{4}$"
      },
      "issuingAuthority": {
        "type": "string",
        "description": "Issuing authority / Autorité de délivrance"
      },
      "placeOfBirth": {
        "type": "string",
        "description": "Place of birth / Lieu de naissance"
      },
      "dateOfBirth": {
        "type": "string",
        "description": "Date of birth / Date de naissance",
        "pattern": "^\\d{2}\\.\\d{2}\\.\\d{4}$"
      },
      "address": {
        "type": "string",
        "description": "Residential address / Adresse"
      },
      "nationality": {
        "type": "string",
        "description": "Nationality / Nationalité"
      },
      "sex": {
        "type": "string",
        "description": "Sex / Sexe",
        "enum": [
          "M",
          "F",
          "X",
          null
        ],
        "nullable": true
      },
      "mrz": {
        "type": "string",
        "description": "Machine Readable Zone (MRZ)"
      }
    },
    "required": [
      "firstName",
      "lastName",
      "personalId",
      "documentType",
      "documentNumber",
      "issueDate",
      "expirationDate"
    ]
  }
}
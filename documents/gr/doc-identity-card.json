{
  "id": "doc-identity-card",
  "name": "Identity Document",
  "description": "Identity document (ID Card, Passport, Driver License)",
  "references": [
    {
      "title": "Hellenic Police — Identity Card",
      "url": "http://www.astynomia.gr/index.php?option=ozo_content&lang='..'&perform=view&id=139&Itemid=132&lang=EN",
      "type": "documentation"
    }
  ],
  "jsonSchema": {
    "type": "object",
    "properties": {
      "firstName": {
        "type": "string",
        "description": "First name / Όνομα"
      },
      "lastName": {
        "type": "string",
        "description": "Last name / Επώνυμο"
      },
      "personalId": {
        "type": "string",
        "description": "Personal ID number / ΑΔΤ",
        "pattern": "^\\d{9}$"
      },
      "documentType": {
        "type": "string",
        "description": "Document type / Τύπος εγγράφου"
      },
      "documentNumber": {
        "type": "string",
        "description": "Document number / Αριθμός εγγράφου"
      },
      "issueDate": {
        "type": "string",
        "description": "Issue date / Ημερομηνία έκδοσης",
        "pattern": "^\\d{2}/\\d{2}/\\d{4}$"
      },
      "expirationDate": {
        "type": "string",
        "description": "Expiration date / Ημερομηνία λήξης",
        "pattern": "^\\d{2}/\\d{2}/\\d{4}$"
      },
      "issuingAuthority": {
        "type": "string",
        "description": "Issuing authority / Αρχή έκδοσης"
      },
      "placeOfBirth": {
        "type": "string",
        "description": "Place of birth / Τόπος γέννησης"
      },
      "dateOfBirth": {
        "type": "string",
        "description": "Date of birth / Ημερομηνία γέννησης",
        "pattern": "^\\d{2}/\\d{2}/\\d{4}$"
      },
      "address": {
        "type": "string",
        "description": "Residential address / Διεύθυνση"
      },
      "nationality": {
        "type": "string",
        "description": "Nationality / Υπηκοότητα"
      },
      "sex": {
        "type": "string",
        "description": "Sex / Φύλο",
        "enum": [
          "M",
          "F",
          "X",
          null
        ],
        "nullable": true
      },
      "mrz": {
        "type": "string",
        "description": "Machine Readable Zone (MRZ)"
      }
    },
    "required": [
      "firstName",
      "lastName",
      "personalId",
      "documentType",
      "documentNumber",
      "issueDate",
      "expirationDate"
    ]
  }
}
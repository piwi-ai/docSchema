{
  "id": "doc-identity-card",
  "name": "Identity Document",
  "description": "Identity document (ID Card, Passport, Driver License)",
  "references": [
    {
      "title": "PMLP — eID Card",
      "url": "https://www.pmlp.gov.lv/en/identity-card-eid-card",
      "type": "documentation"
    }
  ],
  "jsonSchema": {
    "type": "object",
    "properties": {
      "firstName": {
        "type": "string",
        "description": "First name / Vārds"
      },
      "lastName": {
        "type": "string",
        "description": "Last name / Uzvārds"
      },
      "personalId": {
        "type": "string",
        "description": "Personal ID number / Personas kods",
        "pattern": "^\\d{6}-?\\d{5}$"
      },
      "documentType": {
        "type": "string",
        "description": "Document type / Dokumenta veids"
      },
      "documentNumber": {
        "type": "string",
        "description": "Document number / Dokumenta numurs"
      },
      "issueDate": {
        "type": "string",
        "description": "Issue date / Izsniegšanas datums",
        "pattern": "^\\d{2}\\.\\d{2}\\.\\d{4}$"
      },
      "expirationDate": {
        "type": "string",
        "description": "Expiration date / Derīgs līdz",
        "pattern": "^\\d{2}\\.\\d{2}\\.\\d{4}$"
      },
      "issuingAuthority": {
        "type": "string",
        "description": "Issuing authority / Izsniedzējiestāde"
      },
      "placeOfBirth": {
        "type": "string",
        "description": "Place of birth / Dzimšanas vieta"
      },
      "dateOfBirth": {
        "type": "string",
        "description": "Date of birth / Dzimšanas datums",
        "pattern": "^\\d{2}\\.\\d{2}\\.\\d{4}$"
      },
      "address": {
        "type": "string",
        "description": "Residential address / Adrese"
      },
      "nationality": {
        "type": "string",
        "description": "Nationality / Pilsonība"
      },
      "sex": {
        "type": "string",
        "description": "Sex / Dzimums",
        "enum": [
          "M",
          "F",
          "X",
          null
        ],
        "nullable": true
      },
      "mrz": {
        "type": "string",
        "description": "Machine Readable Zone (MRZ)"
      }
    },
    "required": [
      "firstName",
      "lastName",
      "personalId",
      "documentType",
      "documentNumber",
      "issueDate",
      "expirationDate"
    ]
  }
}
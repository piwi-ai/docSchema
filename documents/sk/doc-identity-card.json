{
  "id": "doc-identity-card",
  "name": "Identity Document",
  "description": "Identity document (ID Card, Passport, Driver License)",
  "references": [
    {
      "title": "MINV — Občiansky preukaz",
      "url": "https://www.minv.sk/?obcianske-preukazy",
      "type": "documentation"
    }
  ],
  "jsonSchema": {
    "type": "object",
    "properties": {
      "firstName": {
        "type": "string",
        "description": "First name / Meno"
      },
      "lastName": {
        "type": "string",
        "description": "Last name / Priezvisko"
      },
      "personalId": {
        "type": "string",
        "description": "Personal ID number / Rodné číslo",
        "pattern": "^\\d{6}/?\\d{3,4}$"
      },
      "documentType": {
        "type": "string",
        "description": "Document type / Typ dokumentu"
      },
      "documentNumber": {
        "type": "string",
        "description": "Document number / Číslo dokumentu"
      },
      "issueDate": {
        "type": "string",
        "description": "Issue date / Dátum vydania",
        "pattern": "^\\d{2}\\.\\d{2}\\.\\d{4}$"
      },
      "expirationDate": {
        "type": "string",
        "description": "Expiration date / Platnosť do",
        "pattern": "^\\d{2}\\.\\d{2}\\.\\d{4}$"
      },
      "issuingAuthority": {
        "type": "string",
        "description": "Issuing authority / Vydal"
      },
      "placeOfBirth": {
        "type": "string",
        "description": "Place of birth / Miesto narodenia"
      },
      "dateOfBirth": {
        "type": "string",
        "description": "Date of birth / Dátum narodenia",
        "pattern": "^\\d{2}\\.\\d{2}\\.\\d{4}$"
      },
      "address": {
        "type": "string",
        "description": "Residential address / Adresa"
      },
      "nationality": {
        "type": "string",
        "description": "Nationality / Štátna príslušnosť"
      },
      "sex": {
        "type": "string",
        "description": "Sex / Pohlavie",
        "enum": [
          "M",
          "F",
          "X",
          null
        ],
        "nullable": true
      },
      "mrz": {
        "type": "string",
        "description": "Machine Readable Zone (MRZ)"
      }
    },
    "required": [
      "firstName",
      "lastName",
      "personalId",
      "documentType",
      "documentNumber",
      "issueDate",
      "expirationDate"
    ]
  }
}
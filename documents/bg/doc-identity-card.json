{
  "id": "doc-identity-card",
  "name": "Identity Document",
  "description": "Identity document (ID Card, Passport, Driver License)",
  "references": [
    {
      "title": "Ministry of Interior — Identity Documents",
      "url": "https://www.mvr.bg/en/administrative-services/issuing-identity-documents",
      "type": "documentation"
    }
  ],
  "jsonSchema": {
    "type": "object",
    "properties": {
      "firstName": {
        "type": "string",
        "description": "First name / Име"
      },
      "lastName": {
        "type": "string",
        "description": "Last name / Фамилия"
      },
      "personalId": {
        "type": "string",
        "description": "Personal ID number / ЕГН",
        "pattern": "^\\d{10}$"
      },
      "documentType": {
        "type": "string",
        "description": "Document type / Вид на документа"
      },
      "documentNumber": {
        "type": "string",
        "description": "Document number / Номер на документа"
      },
      "issueDate": {
        "type": "string",
        "description": "Issue date / Дата на издаване",
        "pattern": "^\\d{2}\\.\\d{2}\\.\\d{4}$"
      },
      "expirationDate": {
        "type": "string",
        "description": "Expiration date / Валидна до",
        "pattern": "^\\d{2}\\.\\d{2}\\.\\d{4}$"
      },
      "issuingAuthority": {
        "type": "string",
        "description": "Issuing authority / Издаден от"
      },
      "placeOfBirth": {
        "type": "string",
        "description": "Place of birth / Място на раждане"
      },
      "dateOfBirth": {
        "type": "string",
        "description": "Date of birth / Дата на раждане",
        "pattern": "^\\d{2}\\.\\d{2}\\.\\d{4}$"
      },
      "address": {
        "type": "string",
        "description": "Residential address / Адрес"
      },
      "nationality": {
        "type": "string",
        "description": "Nationality / Гражданство"
      },
      "sex": {
        "type": "string",
        "description": "Sex / Пол",
        "enum": [
          "M",
          "F",
          "X",
          null
        ],
        "nullable": true
      },
      "mrz": {
        "type": "string",
        "description": "Machine Readable Zone (MRZ)"
      }
    },
    "required": [
      "firstName",
      "lastName",
      "personalId",
      "documentType",
      "documentNumber",
      "issueDate",
      "expirationDate"
    ]
  }
}
{
  "id": "doc-identity-card",
  "name": "Identity Document",
  "description": "Identity document (ID Card, Passport, Driver License)",
  "references": [
    {
      "title": "Kormányablak — Személyazonosító",
      "url": "https://kormanyablak.hu/hu/feladatkorok/6",
      "type": "documentation"
    }
  ],
  "jsonSchema": {
    "type": "object",
    "properties": {
      "firstName": {
        "type": "string",
        "description": "First name / Utónév"
      },
      "lastName": {
        "type": "string",
        "description": "Last name / Vezetéknév"
      },
      "personalId": {
        "type": "string",
        "description": "Personal ID number / Személyi szám",
        "pattern": "^\\d{1}\\d{6}\\d{4}$"
      },
      "documentType": {
        "type": "string",
        "description": "Document type / Dokumentum típusa"
      },
      "documentNumber": {
        "type": "string",
        "description": "Document number / Okmányszám"
      },
      "issueDate": {
        "type": "string",
        "description": "Issue date / Kiállítás dátuma",
        "pattern": "^\\d{4}\\.\\d{2}\\.\\d{2}$"
      },
      "expirationDate": {
        "type": "string",
        "description": "Expiration date / Érvényesség",
        "pattern": "^\\d{4}\\.\\d{2}\\.\\d{2}$"
      },
      "issuingAuthority": {
        "type": "string",
        "description": "Issuing authority / Kiállító hatóság"
      },
      "placeOfBirth": {
        "type": "string",
        "description": "Place of birth / Születési hely"
      },
      "dateOfBirth": {
        "type": "string",
        "description": "Date of birth / Születési dátum",
        "pattern": "^\\d{4}\\.\\d{2}\\.\\d{2}$"
      },
      "address": {
        "type": "string",
        "description": "Residential address / Lakcím"
      },
      "nationality": {
        "type": "string",
        "description": "Nationality / Állampolgárság"
      },
      "sex": {
        "type": "string",
        "description": "Sex / Nem",
        "enum": [
          "M",
          "F",
          "X",
          null
        ],
        "nullable": true
      },
      "mrz": {
        "type": "string",
        "description": "Machine Readable Zone (MRZ)"
      }
    },
    "required": [
      "firstName",
      "lastName",
      "personalId",
      "documentType",
      "documentNumber",
      "issueDate",
      "expirationDate"
    ]
  }
}
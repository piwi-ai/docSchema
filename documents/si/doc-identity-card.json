{
  "id": "doc-identity-card",
  "name": "Identity Document",
  "description": "Identity document (ID Card, Passport, Driver License)",
  "references": [
    {
      "title": "Gov.si — Osebna izkaznica",
      "url": "https://www.gov.si/teme/osebna-izkaznica/",
      "type": "documentation"
    }
  ],
  "jsonSchema": {
    "type": "object",
    "properties": {
      "firstName": {
        "type": "string",
        "description": "First name / Ime"
      },
      "lastName": {
        "type": "string",
        "description": "Last name / Priimek"
      },
      "personalId": {
        "type": "string",
        "description": "Personal ID number / EMŠO",
        "pattern": "^\\d{13}$"
      },
      "documentType": {
        "type": "string",
        "description": "Document type / Vrsta dokumenta"
      },
      "documentNumber": {
        "type": "string",
        "description": "Document number / Številka dokumenta"
      },
      "issueDate": {
        "type": "string",
        "description": "Issue date / Datum izdaje",
        "pattern": "^\\d{2}\\.\\d{2}\\.\\d{4}$"
      },
      "expirationDate": {
        "type": "string",
        "description": "Expiration date / Velja do",
        "pattern": "^\\d{2}\\.\\d{2}\\.\\d{4}$"
      },
      "issuingAuthority": {
        "type": "string",
        "description": "Issuing authority / Izdajatelj"
      },
      "placeOfBirth": {
        "type": "string",
        "description": "Place of birth / Kraj rojstva"
      },
      "dateOfBirth": {
        "type": "string",
        "description": "Date of birth / Datum rojstva",
        "pattern": "^\\d{2}\\.\\d{2}\\.\\d{4}$"
      },
      "address": {
        "type": "string",
        "description": "Residential address / Naslov"
      },
      "nationality": {
        "type": "string",
        "description": "Nationality / Državljanstvo"
      },
      "sex": {
        "type": "string",
        "description": "Sex / Spol",
        "enum": [
          "M",
          "F",
          "X",
          null
        ],
        "nullable": true
      },
      "mrz": {
        "type": "string",
        "description": "Machine Readable Zone (MRZ)"
      }
    },
    "required": [
      "firstName",
      "lastName",
      "personalId",
      "documentType",
      "documentNumber",
      "issueDate",
      "expirationDate"
    ]
  }
}
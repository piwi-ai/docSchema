{
  "id": "doc-identity-card",
  "name": "Identity Document",
  "description": "Identity document (ID Card, Passport, Driver License)",
  "references": [
    {
      "title": "Carta d'Identità Elettronica (CIE)",
      "url": "https://www.cartaidentita.interno.gov.it/",
      "type": "documentation"
    }
  ],
  "jsonSchema": {
    "type": "object",
    "properties": {
      "firstName": {
        "type": "string",
        "description": "First name / Nome"
      },
      "lastName": {
        "type": "string",
        "description": "Last name / Cognome"
      },
      "personalId": {
        "type": "string",
        "description": "Personal ID / Codice Fiscale",
        "pattern": "^[A-Z]{6}\\d{2}[A-Z]\\d{2}[A-Z]\\d{3}[A-Z]$"
      },
      "documentType": {
        "type": "string",
        "description": "Document type / Tipo documento"
      },
      "documentNumber": {
        "type": "string",
        "description": "Document number / Numero documento"
      },
      "issueDate": {
        "type": "string",
        "description": "Issue date / Data di emissione",
        "pattern": "^\\d{2}\\.\\d{2}\\.\\d{4}$"
      },
      "expirationDate": {
        "type": "string",
        "description": "Expiration date / Data di scadenza",
        "pattern": "^\\d{2}\\.\\d{2}\\.\\d{4}$"
      },
      "issuingAuthority": {
        "type": "string",
        "description": "Issuing authority / Rilasciato da"
      },
      "placeOfBirth": {
        "type": "string",
        "description": "Place of birth / Luogo di nascita"
      },
      "dateOfBirth": {
        "type": "string",
        "description": "Date of birth / Data di nascita",
        "pattern": "^\\d{2}\\.\\d{2}\\.\\d{4}$"
      },
      "address": {
        "type": "string",
        "description": "Residential address / Indirizzo di residenza"
      },
      "nationality": {
        "type": "string",
        "description": "Nationality / Nazionalità"
      },
      "sex": {
        "type": "string",
        "description": "Sex / Sesso",
        "enum": [
          "M",
          "F",
          "X",
          null
        ],
        "nullable": true
      },
      "mrz": {
        "type": "string",
        "description": "Machine Readable Zone (MRZ)"
      }
    },
    "required": [
      "firstName",
      "lastName",
      "personalId",
      "documentType",
      "documentNumber",
      "issueDate",
      "expirationDate"
    ]
  }
}
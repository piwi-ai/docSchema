{
  "id": "doc-identity-card",
  "name": "Identity Document",
  "description": "Identity document (ID Card, Passport, Driver License)",
  "references": [
    {
      "title": "Policía Nacional — DNI",
      "url": "https://www.dnielectronico.es/PortalDNIe/",
      "type": "documentation"
    }
  ],
  "jsonSchema": {
    "type": "object",
    "properties": {
      "firstName": {
        "type": "string",
        "description": "First name / Nombre"
      },
      "lastName": {
        "type": "string",
        "description": "Last name / Apellidos"
      },
      "personalId": {
        "type": "string",
        "description": "Personal ID number / DNI / NIE",
        "pattern": "^[0-9XYZ]\\d{7}[A-Z]$"
      },
      "documentType": {
        "type": "string",
        "description": "Document type / Tipo de documento"
      },
      "documentNumber": {
        "type": "string",
        "description": "Document number / Número de documento"
      },
      "issueDate": {
        "type": "string",
        "description": "Issue date / Fecha de expedición",
        "pattern": "^\\d{2}/\\d{2}/\\d{4}$"
      },
      "expirationDate": {
        "type": "string",
        "description": "Expiration date / Fecha de caducidad",
        "pattern": "^\\d{2}/\\d{2}/\\d{4}$"
      },
      "issuingAuthority": {
        "type": "string",
        "description": "Issuing authority / Autoridad de expedición"
      },
      "placeOfBirth": {
        "type": "string",
        "description": "Place of birth / Lugar de nacimiento"
      },
      "dateOfBirth": {
        "type": "string",
        "description": "Date of birth / Fecha de nacimiento",
        "pattern": "^\\d{2}/\\d{2}/\\d{4}$"
      },
      "address": {
        "type": "string",
        "description": "Residential address / Domicilio"
      },
      "nationality": {
        "type": "string",
        "description": "Nationality / Nacionalidad"
      },
      "sex": {
        "type": "string",
        "description": "Sex / Sexo",
        "enum": [
          "M",
          "F",
          "X",
          null
        ],
        "nullable": true
      },
      "mrz": {
        "type": "string",
        "description": "Machine Readable Zone (MRZ)"
      }
    },
    "required": [
      "firstName",
      "lastName",
      "personalId",
      "documentType",
      "documentNumber",
      "issueDate",
      "expirationDate"
    ]
  }
}